<% id_str = "_#{date.id}_#{participation.id}" %>
<% comment = participation.event_attendees.find_by_event_date_id(date.id) %>
<% comment_comment = (comment and comment.comment!="") ? comment.comment : "" %>
<% comment_comment = "クリックしてコメント入力" if editable and comment_comment == "" %>
<%= hidden_field_tag("authenticity_token", form_authenticity_token) %>
<div <%= 'class="editable_comment"' if editable -%> id="editable_comment<%= id_str -%>">
  <span><%= h (comment_comment) %></span>
</div>
