<div id="contents_container">

    <div id="mainmenu">
      <ul class="submenu">
	<% get_events_menu_items(@menu,@participation).each do |menu_item| %>
	<li class="menu"><%= menu_item -%></li>
	<% end %>
      </ul>
    </div>

  <div id="event_panel">

    <div style="width: 98%;">
      <h1 id="title"><%=h @event.name %></h1>
    </div>

  <div id="contents_left">

    <div class="box_space">
      <div class="box_space_title">メニュー</div>
      <div class="box_space_body">
        <ul>
          <% get_event_menu_items(@menu,@event.id).each do |menu_item| %>
          <li><%= menu_item -%></li>
          <% end %>
        </ul>
      </div>
      <div class="box_space_bottom"></div>

      <% if @event.owner?(session[:user_id]) %>
      <div class="box_space_title">幹事メニュー</div>
      <div class="box_space_body">
        <ul>
          <% get_event_manage_menu_items(@menu,@event.id).each do |menu_item| %>
          <li><%= menu_item -%></li>
          <% end %>
        </ul>
      </div>
      <div class="box_space_bottom"></div>
      <% end %>

    </div><!-- box_space -->

  </div><!-- contents_left -->

  <div id="contents_right">

<div class="desc" style="margin-bottom: 10px;">この画面では、管理者の権限設定、強制退会、及び参加者を追加をすることが可能です。</div>

<div class="navi"><%= page_link @pages -%></div>

<div style="margin: 10px auto 10px auto; width: 100%; text-align: center;">
<table border="1" class="normal" style="width: 80%; margin: auto;">
  <tr>
    <th style="width:10%;">管理者</th>
    <th>名前</th>
    <th>社員番号</th>
  </tr>

  <% even_or_odd = 0 %>
  <% @participations.each_with_index do |participation, index| %>
  <% even_or_odd = 1 - even_or_odd %>
  <tr>
    <td class="line_<%= even_or_odd -%>">
      <% if session[:user_id] == participation.user_id -%>
        管理者
      <% else -%>
        <%= check_box_tag("manager_#{index}", "true", @event.owner?(participation.user.id),
             {:onclick => "document.location.href='#{url_for(:action => :event_assign_user, :event => @event, :owner => "#{@event.owner?(participation.user.id)}", :user_id => participation.user_id)}'"}) -%>
      <% end -%>
    </td>
    <td class="line_<%= even_or_odd -%>"><%= participation.user.name -%></td>
    <td class="line_<%= even_or_odd -%>"><%= participation.user.code -%></td>
  </tr>
  <% end %>
</table>
</div>

</div><!-- contents_right -->

<div id="contents_bottom">
</div><!-- contents_bottom -->
</div><!-- event_panel -->
</div><!-- contents_container -->
